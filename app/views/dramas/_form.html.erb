<%= form_for @drama do |f| %>
Name: <%= f.text_field :name %><br>
Genre: <%= f.text_field :genre %><br>

<%= f.fields_for :reviews do |r| %>
<%= r.label :title %>
<%= r.text_field :title %><br>
<%= r.label :rating %>
<%= r.number_field :rating %><br>
<%= r.label :content %>
<%= r.text_field :content %><br>
<%end%>

<%= f.submit %>
<%end%>
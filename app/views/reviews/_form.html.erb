<div>

<%=render 'layouts/errors'%>

<%= form_for @review do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :rating %><br>
<%= f.number_field :rating %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<%= f.hidden_field :drama_id, value: session[:drama_id]%>
<%= f.hidden_field :user_id, value: current_user.id%>
<%= f.submit%>
<%end%>

</div>
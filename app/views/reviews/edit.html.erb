<h2>Edit Review</h2>

<div>
<% @errors && @errors.each do |m|%>
<li><%= m %></li><br>
<%end%>

<%= form_for @review do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :rating %><br>
<%= f.number_field :rating %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br>
<%= f.hidden_field :drama_id, value: @review.drama_id%>
<%= f.hidden_field :user_id, value: current_user.id%>
<%= f.submit%>
<%end%>

<%= button_to "Delete Review", @review, method: :delete %> 
<%=button_to "Main Page", dramas_path, method: :get%>
<%= button_to "Log Out", logout_path, method: :post %>
</div>